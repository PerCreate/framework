{
	"compilerOptions": {
		"outDir": "./dist/",
		"target": "es6",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"strictNullChecks": false,
		"suppressImplicitAnyIndexErrors": true,
		"sourceMap": true,
		"lib": ["es5", "es6", "dom", "dom.iterable", "ES2021"],
		"strict": false
	},
	"include": ["./**/*.ts"]
}
